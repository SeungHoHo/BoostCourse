<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".View.Fragment.MovieList.FragmentC">

    <ImageView
        android:id="@+id/fragmentC_MovieThumbImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/image3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragmentC_MovieTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="3. 더 킹"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragmentC_MovieThumbImageView" />

    <ImageView
        android:id="@+id/fragmentC_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/home_slider1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragmentC_MovieTitleTextView" />

    <TextView
        android:id="@+id/fragmentC_TicketingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="180dp"
        android:text="예매율 61.6% "
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragmentC_View" />

    <TextView
        android:id="@+id/fragmentC_MovieGradeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="| 15세 관람가 "
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/fragmentC_TicketingTextView"
        app:layout_constraintTop_toTopOf="@id/fragmentC_TicketingTextView" />

    <TextView
        android:id="@+id/fragmentC_MovieDDayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="| D-1"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/fragmentC_MovieGradeTextView"
        app:layout_constraintTop_toTopOf="@id/fragmentC_TicketingTextView" />

    <Button
        android:id="@+id/fragmentC_btnMovieApi"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_orange"
        android:text="상세보기"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragmentC_TicketingTextView" />


</androidx.constraintlayout.widget.ConstraintLayout>